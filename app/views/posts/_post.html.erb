<div class="posts-wrapper row">
	<div class="post">
		 <div class="post-head">
			<div class="name"><center><b>

				
				<%= link_to(post.user.username, user_show_path(post.user.username), {:style=>'color:#000000;', class: 'nav-link'}) %> </b> 
			</div>
		</div> 
			
		<div class="image.centre-block"><center>
			<%= link_to (image_tag post.image.url(:large), {class: 'img-responsive'}), post_path(post) %>
		</div>

		<div class="caption"><center>
			<%= post.caption %>
		</div>

		<div>
			<%= time_ago_in_words post.created_at %> ago

		<div class>
		<% if post.comments %>
			<% post.comments.each do |comment| %>
				<div>
					<%= comment.user.username %>:
					<%= comment.content %>
					<% if comment.user == current_user %>
						<%= link_to "[Delete Comment]", post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" } %>
					
					<% end %>
				</div>
			<% end %>	
		<% end %>		
		</div>

		<div class="comment-form">
				<%= form_for [post, post.comments.new] do |f| %>
      			<%= f.text_field :content, placeholder: "Add a comment..." %>
      			<% end %>
      	</div>

	</div>
</div>		